<Window x:Class="Minesweeper.GameEasy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Minesweeper" Height="600" Width="400"
        Background="#C0C0C0"
        FontFamily="Digital-7 Regular"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <!--<Setter Property="Background" Value="#C0C0C0"/>-->
        </Style>
        <local:BoardVisualConverter x:Key="VisualConverter"/>
    </Window.Resources>

    <Grid Width="350px" Height="350px" VerticalAlignment="Bottom" Margin="0,0,0,25">
        <ItemsControl ItemsSource="{Binding gameBoardArray}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="8" Rows="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Value}" Visibility="{Binding Value, Converter={StaticResource VisualConverter}}" Click="Button_Click" BorderBrush="Black" BorderThickness="1"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
